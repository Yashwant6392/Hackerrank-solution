int flippingMatrix(vector<vector<int>> matrix) {
    int n = matrix.size() / 2;
    int total = 0;

    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < n; ++j) {
            int a = matrix[i][j];
            int b = matrix[i][2*n - 1 - j];
            int c = matrix[2*n - 1 - i][j];
            int d = matrix[2*n - 1 - i][2*n - 1 - j];
            total += max({a, b, c, d});
        }
    }

    return total;
}
